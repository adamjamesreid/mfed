Bootstrap: docker
From: ubuntu:20.04

%labels
AUTHOR Adam Reid

%environment
export TZ=Europe/London

%post
# This is to fix ubuntu install hanging on timezone input
ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

apt-get update

# libcurl4-openssl-dev is to get CRurl to work in R which is required for DiffBind
apt-get install -y wget vim python dirmngr gnupg apt-transport-https ca-certificates software-properties-common libcurl4-openssl-dev

apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu focal-cran40/'

apt-get install -y r-base

apt-get clean


R --version

R --slave -e 'if (!requireNamespace("BiocManager", quietly = TRUE)) install.packages("BiocManager", repos="https://cloud.r-project.org/")'
	
R --slave -e 'BiocManager::install("DiffBind")'

